<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miguelpeachey.marketplacesimulator.Fragments.FashionSuppliersFragments.SunsSewingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:padding="5dp"
            android:background="#e9dede">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/suns_sewing_ltd"
                android:id="@+id/imageView" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Sun's Sewing Ltd"
                android:textColor="#ba7911"
                android:textSize="27sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="30dp"
                android:text="@string/suns_description"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
