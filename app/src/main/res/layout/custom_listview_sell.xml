<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        android:text="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/id"
        android:text="Item"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView4" />

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="Item"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Price"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/tvListPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListName"
        android:layout_alignBottom="@+id/tvListName"
        android:layout_alignStart="@+id/textView5"
        android:text="Price"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Status"
        android:layout_marginRight="5dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView6" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvListName"
        android:layout_alignBottom="@+id/tvListName"
        android:layout_alignStart="@+id/textView6"
        android:text="Private"
        android:textColor="#da0c0c"
        android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignEnd="@+id/tvListPrice"
            android:layout_below="@+id/tvListName"
            android:layout_marginTop="18dp"
            android:background="#797676" />

    </RelativeLayout>

</RelativeLayout>